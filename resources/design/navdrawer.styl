
.v-navigation-drawer
    .lightbox
        position: relative

        > *
            z-index: 1

        &:before
            position: absolute
            content: ''
            left: 0
            height: 100%
            width: 100%
            background: currentColor
            opacity: 0.54
            z-index: 0
        
        &:after
            position: absolute
            content: ''
            left: 0
            bottom: 0
            height: 72px
            width: 100%
            background-image: linear-gradient(to top, rgba(0, 0, 0, 0.27) 0%, transparent 72px)
            z-index: 0

    
    &.theme--light
        .v-divider
            border-color: rgba(17,17,17,0.1)